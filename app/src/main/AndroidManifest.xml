<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.attafakkur.myfilmstorage">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.attafakkur.myfilmstorage.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.attafakkur.myfilmstorage.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.DetailTvShow"
            android:label="@string/tvshow_detail"
            android:parentActivityName=".MainActivity"></activity>

        <provider
            android:name=".provider.TvShowProvider"
            android:authorities="com.attafakkur.myfilmstorage.tvshow"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.attafakkur.myfilmstorage.READ_DATABASE"
            android:writePermission="com.attafakkur.myfilmstorage.WRITE_DATABASE" />
        <provider
            android:name=".provider.MovieProvider"
            android:authorities="com.attafakkur.myfilmstorage.movie"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.attafakkur.myfilmstorage.READ_DATABASE"
            android:writePermission="com.attafakkur.myfilmstorage.WRITE_DATABASE" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DetailMovies"
            android:label="@string/movies_detail"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>